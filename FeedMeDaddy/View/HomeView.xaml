            <Border Grid.Row="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    CornerRadius="10"
                    BorderBrush="LightGray"
                    Padding="10"
                    BorderThickness="1" Width="350">
                
                <TextBlock Foreground="LightGray"
                       FontSize="15"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left">
                    Authors <LineBreak /><LineBreak />
