<UserControl x:Class="FeedMeDaddy.View.PlanningView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
            xmlns:local="clr-namespace:FeedMeDaddy.View"
            xmlns:viewmodel="clr-namespace:FeedMeDaddy.ViewModel"
            d:DataContext="{d:DesignInstance Type=viewmodel:PlanningViewModel}"
            mc:Ignorable="d" 
            d:DesignHeight="690" d:DesignWidth="1080">

    <Grid Name="global" Margin="0,0,0,-0.4">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="90" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="Menu Planning"
                FontSize="40"
                Foreground="White"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.ColumnSpan="2"/>


        <Grid Name="Left" 
              Grid.Row="1" Margin="0,0,0,0" 
              >

            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border BorderBrush="Black" BorderThickness="2">
                <Grid Name="Menu" 
              Grid.Row="0" 
                  Margin="0,0,0,0" 
              >


                    <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                
                    
                    
                <Border BorderBrush="Black" 
                        BorderThickness="1,0,0,1"
                        Grid.Column="1">
                </Border>
                <TextBlock Text="Breakfast"
                           Grid.Row="0"
                           Grid.Column="1"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           />
                    <Border BorderBrush="Black" 
                        BorderThickness="1,0,0,1"
                        Grid.Column="2">
                    </Border>
                    <TextBlock Text="Dinner"
                           Grid.Row="0"
                           Grid.Column="2"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           />
                    
                    <Border BorderBrush="Black" 
                        BorderThickness="1,0,0,1"
                        Grid.Column="3">
                    </Border>
                    <TextBlock Text="Supper"
                           Grid.Row="0"
                           Grid.Column="3"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           />
                
                <!--Must do a binding on the text to have the current day on the first colomn -->
                    <Border BorderBrush="Black" 
                        BorderThickness="0,1,1,0"
                        Grid.Row="1">
                    </Border>
                    <TextBlock Text = "{Binding DayZero}"
                           TextWrapping="Wrap"
                           Grid.Row="1"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           />
                    <Border BorderBrush="Black" 
                        BorderThickness="0,1,1,0"
                        Grid.Row="2">
                    </Border>
                    <TextBlock Text="{Binding DayOne}"
                           TextWrapping="Wrap"
                           Grid.Row="2"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           />
                    <Border BorderBrush="Black" 
                        BorderThickness="0,1,1,0"
                        Grid.Row="3">
                    </Border>
                    <TextBlock Text="{Binding DayTwo}"
                           TextWrapping="Wrap"
                           Grid.Row="3"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           />
                    <Border BorderBrush="Black" 
                        BorderThickness="0,1,1,0"
                        Grid.Row="4">
                    </Border>
                    <TextBlock Text="{Binding DayThree}"
                           TextWrapping="Wrap"
                           Grid.Row="4"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           />
                    <Border BorderBrush="Black" 
                        BorderThickness="0,1,1,0"
                        Grid.Row="5">
                    </Border>
                    <TextBlock Text="{Binding DayFour}"
                           TextWrapping="Wrap"
                           Grid.Row="5"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           />
                    <Border BorderBrush="Black" 
                        BorderThickness="0,1,1,0"
                        Grid.Row="6">
                    </Border>
                    <TextBlock Text="{Binding DayFive}"
                           TextWrapping="Wrap"
                           Grid.Row="6"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           />
                    <Border BorderBrush="Black" 
                        BorderThickness="0,1,1,0"
                        Grid.Row="7">
                    </Border>
                    <TextBlock Text="{Binding DaySix}"
                           TextWrapping="Wrap"
                           Grid.Row="7"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           />
                <!--Breakfast -->

                <ComboBox Grid.Row="1"
                          Grid.Column="1"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          
                          />
                <ComboBox Grid.Row="2"
                          Grid.Column="1"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="3"
                          Grid.Column="1"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="4"
                          Grid.Column="1"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="5"
                          Grid.Column="1"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="6"
                          Grid.Column="1"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="7"
                          Grid.Column="1"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <!--Dinner -->
                <ComboBox Grid.Row="1"
                          Grid.Column="2"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="2"
                          Grid.Column="2"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="3"
                          Grid.Column="2"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="4"
                          Grid.Column="2"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="5"
                          Grid.Column="2"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="6"
                          Grid.Column="2"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="7"
                          Grid.Column="2"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <!--Supper -->
                <ComboBox Grid.Row="1"
                          Grid.Column="3"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="2"
                          Grid.Column="3"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="3"
                          Grid.Column="3"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="4"
                          Grid.Column="3"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          Foreground="PeachPuff"
                          />
                <ComboBox Grid.Row="5"
                          Grid.Column="3"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="6"
                          Grid.Column="3"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />
                <ComboBox Grid.Row="7"
                          Grid.Column="3"
                          IsEditable="True" 
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          />


            </Grid>
            </Border>
            <Button Content="Add ingredient to Shopping list" 
                    Grid.Row="2"
                    Width="180"
                    Height="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,30,30" />
            <Label Name="units"
               Content="Kilogram"
               Height="30"
               Width="60"
               Grid.Row="1"
               VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="310,0,0,0"
               
               />
            <!--Faire un formatage date -->
            <TextBox Name="dueDate"
                 Text="12.12.2021"
                 Height="30"
                 Width="90"
                 
                 Grid.Row="1"
                VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="370,0,0,0"
                 VerticalContentAlignment="Center"
                 
                 />
            <TextBox Name="item"
                   Text="Milk"
                   Height="30"
                   Width="90"
                   
                   Grid.Row="1"
                  VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="120,0,0,0"
                   VerticalContentAlignment="Center"
                   
                 />

            <xctk:IntegerUpDown Name="quantity"
                            Text="4"
                            Grid.Row="1" 
                            Width="100" 
                            Height="30" 
                            ValueChanged="Quantity_ValueChanged" 
                            VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="210,0,0,0"
                            VerticalContentAlignment="Center" 
                            Minimum="1" 
                            Maximum="100"
                            
                            />

        </Grid>
        <Grid Name="Shopping"
              Grid.Column="2"
              Grid.Row="1" Margin="0,0.4,0,-0.4" 
              >

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="9*"/>
                
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Preview Shopping list"
                   Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" 
                   Margin="0,0,0,0"
                   FontSize="20"
                    Foreground="White"
                   />
            <ListBox Name="preShopping"
                Grid.Row="1"
                Grid.Column="1"
                Margin="10">
                <ListBox.Resources>
                    <Style TargetType ="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </ListBox.Resources>
            </ListBox>
                
                
      
            <Button Content="Add Menu to Shopping list"
                Grid.Column="1"
                Grid.Row="2"
                Width="160"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0" />
            

        </Grid>


    </Grid>
</UserControl>
